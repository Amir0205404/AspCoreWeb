@model WebApplication3.ViewModels.BuyProductViewModel

@{

    ViewBag.Title = "Оформление покупки";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<h5><a asp-action="Detail" asp-route-id="@Model.IdProduct"> @Model.Product.Title  </a></h5> 
<form method="post" asp-action="BuyProduct" asp-controller="Product">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="IdUser" />
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="IdProduct" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adress" class="control-label">Адрес</label>
        <input type="text" asp-for="Adress" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Заказать" class="btn btn-outline-secondary" />
    </div>
</form>