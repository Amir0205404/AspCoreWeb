@model IEnumerable<WebApplication3.Models.Product>
@{
    ViewBag.Title = "Продукты";
}
<form method="post" asp-action="Index" asp-controller="Product">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label name="nameProduct" class="control-label">Название</label>
        <input type="text" name="nameProduct" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Поиск товара" class="btn btn-outline-secondary" />
    </div>
</form>
@if (ViewBag.checkAdmin)
{
    <h5><a asp-action="CreateProduct">Добавить Продукт</a></h5>
}
<p>@Model.Count() товаров</p>
<hr class="granica">
@foreach (var item in Model)
{

    @if (!item.isRemoved)
    {
        <div>
            <h5><a asp-action="Detail" asp-route-id="@item.ProductId"> @item.Title </a></h5>
            <p>Цена:<b>@item.Price</b> </p>
            <p>Описание: @item.Description</p>


            @if (item.Count > 0)
            {
                <form method="get" asp-action="BuyProduct" asp-controller="Product" asp-route-id="@item.ProductId">
                    <div class="form-group">
                        <input type="submit" value="Оформить заказ" class="btn btn-outline-secondary" style="color:green" />
                    </div>
                </form>
            }
            @if (item.Count >= 5)
            {
                <p style="border:3px #00B344  solid; width:175px;">
                    В наличии
                </p>

            }
            else if (item.Count > 0)
            {
                <p style="border:3px #00B344  solid; width:175px;">
                    Осталось мало
                </p>

            }
            else
            {
                <p style="border:3px #00B344  solid; width:175px;">
                    Нет в наличии
                </p>

            }
            @if (ViewBag.checkAdmin)
            {
                <h5><a style="color:blue" asp-action="Edit" asp-route-id="@item.ProductId">Редактировать Продукт</a></h5>
            }
            @if (ViewBag.checkAdmin)
            {
                <form asp-action="Delete" asp-controller="Product" asp-route-id="@item.ProductId">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="submit" value="Пометить товар удаленным" class="btn btn-outline-secondary" style="color:red" />
                    </div>
                </form>

            }
        </div>
        <hr class="granica">
    }


}