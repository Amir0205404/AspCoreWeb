@model IEnumerable<WebApplication3.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}

<h4><a asp-action="Create">Добавить пользователя</a></h4>

<table class="table">
    <tr><th>Имя</th><th>Год</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Year</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Редактировать пользователя</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id"> Сменить пароль </a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить пользователя
                    </button>
                </form>
            </td>
        </tr>
    }
</table>