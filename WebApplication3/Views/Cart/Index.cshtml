@model WebApplication3.ViewModels.CartIndexViewModel
@{
}

<h2>Ваша корзина</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Количество</th>
            <th>Название</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Сумма</th>
            <th>Действие</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Product.Title</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Quantity * line.Product.Price).ToString("c"))
                </td>
                <td>
                    <form asp-action="RemoveFromCart" method="post">
                        <input type="hidden" name="productld" value="@line.Product.ProductId"/>
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>    
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить с корзины
                        </button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteOneProduct" method="post">
                        <input type="hidden" name="productld" value="@line.Product.ProductId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить 1 товар
                        </button>
                    </form>
                </td>
            </tr>

        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right"></td>
            <td class="text-right">
                
            </td>
            <td>
                Итого:
            </td>
            <td>
                @Model.Cart.ComputeTotalValue().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Продолжить покупку</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Order">
        Перейти к оформлению заказа
    </a>
</div>
