@model IEnumerable<WebApplication3.Models.Product>
@{
    ViewBag.Title = "Продукты";
}

<h5><a asp-action="CreateProduct">Добавить Продукт</a></h5>
@foreach (var item in Model)
{
    <div>

        <h5><a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id"> @item.Title </a></h5>
        <p>@item.Price</p>
        <p>@item.Description</p>

    </div>

}