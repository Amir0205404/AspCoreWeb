@model WebApplication3.ViewModels.OrderViewModel

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}


<h2>Оформление заказа</h2>
<p>Введите данные, и мы сразу же отправим ваш товар</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label>Имя:</label><input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Адрес</label><br />
        <input list="dota-heroes" class="form-control" type="text" autocomplete="off" asp-for="Adress" />
        <datalist id="dota-heroes">
            @foreach (var product in Model.adressList)
            {
                <option value="@product.AddressName">@product.AddressName</option>
            }
        </datalist>
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Заказать" />
    </div>
</form>


